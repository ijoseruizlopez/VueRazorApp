<script type="text/html" id="card-user">
    <div class="container mt-5">
        <div class="card-user">
            <div class="row g-0">
                <div class="col-md-4 d-flex justify-content-center align-items-center">
                   <img :src="userImage" :alt="'Perfil de ' + userName" class="img-fluid">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{ userName }}</h5>
                        <p class="card-text"><strong>Rol:</strong> {{ userRole }}</p>
                        <p class="card-text"><strong>Pais:</strong> {{ userCountry }}</p>
                        <a class="btn btn-custom" v-on:click="notifyMap">Localizar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</script>

<script>
    Vue.component("card-user", {
        template: "#card-user",
        props: {
            userName: String,
            userRole: String,
            userCountry: String,
            userImage: String
        },
        methods: {
              notifyMap() {

                EventBus.$emit('userConnected', {
                    userImage: this.userImage,
                    userCountry: this.userCountry
                });
            }
        },
        data() {
            return {};
        }
    });
</script>

